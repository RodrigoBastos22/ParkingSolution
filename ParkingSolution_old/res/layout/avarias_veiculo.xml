<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btn01TelaEntradaGravar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="148dp"
        android:layout_height="274dp"
        android:layout_alignLeft="@+id/Space4"
        android:layout_below="@+id/Space3"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_marginRight="42dp"
        android:layout_row="1"
        android:src="@drawable/carro" />

    <Space
        android:id="@+id/Space1"
        android:layout_width="1dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/Space2"
        android:layout_below="@+id/imageView1"
        android:layout_column="0"
        android:layout_row="2" />

    <Space
        android:id="@+id/Space7"
        android:layout_width="219dp"
        android:layout_height="67dp"
        android:layout_alignTop="@+id/button1"
        android:layout_column="3"
        android:layout_gravity="fill_vertical"
        android:layout_row="3"
        android:layout_toRightOf="@+id/Space6" />

    <Space
        android:id="@+id/Space2"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:id="@+id/Space4"
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/Space2"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_toRightOf="@+id/Space2" />

    <Space
        android:id="@+id/Space6"
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/Space2"
        android:layout_column="2"
        android:layout_marginLeft="105dp"
        android:layout_row="0"
        android:layout_toRightOf="@+id/Space4" />

    <Space
        android:id="@+id/Space3"
        android:layout_width="1dp"
        android:layout_height="44dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:id="@+id/Space5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2" />

    <CheckBox
        android:id="@+id/chkDireitaMeio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chkDireitaFrente"
        android:layout_below="@+id/chkDireitaFrente"
        android:layout_marginTop="58dp" />

    <CheckBox
        android:id="@+id/chkDireitaTraz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chkEsquerdaTraz"
        android:layout_alignBottom="@+id/chkEsquerdaTraz"
        android:layout_alignLeft="@+id/chkDireitaMeio" />

    <CheckBox
        android:id="@+id/chkEsquerdaMeio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chkDireitaMeio"
        android:layout_alignBottom="@+id/chkDireitaMeio"
        android:layout_toLeftOf="@+id/imageView1" />

    <CheckBox
        android:id="@+id/chkEsquerdaFrente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chkDireitaFrente"
        android:layout_alignBottom="@+id/chkDireitaFrente"
        android:layout_alignLeft="@+id/chkEsquerdaMeio" />

    <CheckBox
        android:id="@+id/chkEsquerdaTraz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_marginBottom="30dp"
        android:layout_toLeftOf="@+id/imageView1" />

    <CheckBox
        android:id="@+id/chkDireitaFrente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Space6"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chkEsquerdaTraz"
        android:layout_alignRight="@+id/chkDireitaTraz"
        android:layout_below="@+id/Space1"
        android:background="@drawable/roundedbutton"
        android:text="Salvar"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/chkTraz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Space1"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/chkFrente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Space3"
        android:layout_alignLeft="@+id/chkTraz" />

</RelativeLayout>