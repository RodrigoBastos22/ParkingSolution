<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.parkingsolutionnew.TelaLogin" >

    <Space
        android:id="@+id/Space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_vertical"
        android:layout_row="4" />

    <CheckBox
        android:id="@+id/chk01TelaRegistraMercosul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Modelo Mercosul" />

    <EditText
        android:id="@+id/edt01PLACA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chk01TelaRegistraMercosul"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:inputType="textCapCharacters" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn01TelaRegistraRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt01PLACA"
        android:layout_alignRight="@+id/edt01PLACA"
        android:layout_below="@+id/chk01TelaRegistraMercosul"
        android:layout_marginTop="80dp"
        android:background="@drawable/roundedbutton"
        android:onClick="MontaTelaAvariasClick"
        android:text="Registrar"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</RelativeLayout>