<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.parkingsolutionnew.TelaLogin" >

    <Space
        android:id="@+id/Space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_vertical"
        android:layout_row="4" />

    <EditText
        android:id="@+id/edt01TelaConsultaAvariasPlaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:ems="10"
        android:enabled="true"
        android:inputType="textCapCharacters" />

    <CheckBox
        android:id="@+id/chk01TelaConsultaAvariasMercosul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt01TelaConsultaAvariasPlaca"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Modelo Mercosul" />

    <Button
        android:id="@+id/btn01TelaConsultaAvariasConsultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt01TelaConsultaAvariasPlaca"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/edt01TelaConsultaAvariasPlaca"
        android:layout_marginBottom="51dp"
        android:background="@drawable/roundedbutton"
        android:onClick="MontaTelaSelectAvarias"
        android:text="Consultar"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</RelativeLayout>